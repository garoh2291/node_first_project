<h1>Cahnge course {{course.title}}</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/courses/edit" method="post">
  <div class="input-field">
    <input
      id="title"
      value="{{course.title}}"
      name="title"
      type="text"
      class="validate"
      required
    />
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Write Title">
    </span>

  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
      value="{{course.price}}"
    />
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Write Price">
    </span>

  </div>

  <div class="input-field">
    <input
      id="img"
      value="{{course.img}}"
      name="img"
      type="text"
      class="validate"
      required
    />
    <label for="img">URL for pictures</label>
    <span class="helper-text" data-error="Write URL">
    </span>

  </div>

  <input type="hidden" name="id" value="{{course.id}}" />
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <button type="submit" class="btn btn-primary">Edit course</button>

</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}" />
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <button class="btn red">Delete Course</button>
</form>